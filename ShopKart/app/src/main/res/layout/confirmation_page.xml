<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Thank You For Your Order!"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView12"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/holo_blue_bright" />

        <TextView
            android:text="Your order has been placed and is being processed. When the item(s) are shipped, you will receive an email with the dtails. You can track this offer through My Orders page. Note down your reference number for future queries about this order."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            android:textColor="@android:color/black"
            android:paddingLeft="20sp"
            android:paddingRight="10sp"
            android:padding="10sp"
            android:paddingBottom="10sp"
            android:paddingTop="10sp"
            android:paddingEnd="10sp"
            android:paddingStart="10sp"
            android:textAlignment="textStart"
            android:textAllCaps="false" />



    </LinearLayout>
        <LinearLayout
            android:id="@+id/price_details_ll"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentTop="true"

            android:layout_alignParentStart="true">
            <TextView
                android:text="PRICE DETAILS"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/nav_email"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:fontFamily="serif" />
            <RelativeLayout
                android:layout_width="match_parent"

                android:layout_height="80dp"
                tools:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:weightSum="1"
                    android:layout_alignParentLeft="true"
                    tools:layout_height="wrap_content">

                    <TextView
                        android:text="Amount Payable"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView3"
                        android:layout_weight="0.04"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="normal|bold"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:text="Delivery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView7"
                        android:layout_weight="0.04"
                        android:fontFamily="sans-serif-condensed"
                        android:textStyle="normal|bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView8"
                        android:layout_weight="0.16"
                        tools:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:text="Reference Number" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:weightSum="1"
                    android:layout_alignParentRight="true"
                    android:layout_marginEnd="13dp">

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/price"
                        android:layout_weight="0.04"
                        android:textAlignment="viewEnd"
                        android:textStyle="bold"
                        android:textColor="@android:color/background_dark" />

                    <TextView
                        android:text="FREE"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/delivery"
                        android:layout_weight="0.04"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@android:color/holo_green_light" />

                    <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/referenceNumber"
                        android:layout_weight="0.17"
                        android:textAlignment="textEnd"
                        android:textStyle="bold"
                        android:textColor="@android:color/background_dark" />

                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:text="Delivery Address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView21"
            android:textStyle="normal|bold"
            android:fontFamily="sans-serif-condensed"
            android:textColor="@android:color/background_dark"
            android:layout_marginTop="10sp" />

        <TextView
            android:text="Delivery Address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/shippingAddress"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:layout_marginTop="3sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@android:color/background_light">

        <TextView
            android:padding="5dp"
            android:text="You can manage  your order  from My Orders page."
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView36"
            android:textAlignment="center" />

        <Button
            android:text="MY ORDERS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button5"
            android:onClick="confirmation"
            android:textColor="@android:color/black"
            android:background="@android:drawable/ic_notification_overlay" />

    </LinearLayout>
    </LinearLayout>
</ScrollView>