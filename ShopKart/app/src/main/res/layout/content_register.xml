<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D3D3D3"
    android:layout_width="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.fearking.shopkart.CustomerPersonalDetails"
    tools:showIn="@layout/cutomer_register"
    android:layout_height="800dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:background="#D3D3D3"

        android:paddingTop="@dimen/activity_vertical_margin"
        android:layout_height="700dp">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/register_fullname"
            android:layout_below="@+id/tv_reg_user"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/register_user"
            android:layout_below="@+id/tv_reg_pass"
            android:layout_alignParentStart="true" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/aaaaaaa"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            android:layout_width="match_parent"
            android:layout_below="@+id/tv_name">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"

            android:layout_centerHorizontal="true"
            android:id="@+id/register_password" />
        </android.support.design.widget.TextInputLayout>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:ems="10"
            android:id="@+id/reg_ph"
            android:layout_below="@+id/tv_reg_ph"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="Username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_reg_pass"
            android:layout_below="@+id/register_fullname"
            android:layout_alignParentStart="true"
            android:textSize="12sp"
            android:textColor="#000000"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/reg_email"
            android:layout_below="@+id/tv_reg_email"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Personal Details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textStyle="normal|bold"
            android:textSize="18sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textColor="#000000" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Full Name"
            android:id="@+id/tv_reg_user"
            android:layout_marginTop="24dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_below="@+id/textView5"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:text="Password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_below="@+id/register_user"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:text="Mobile Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_reg_ph"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_below="@+id/aaaaaaa"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:text="Email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_reg_email"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_below="@+id/reg_ph"
            android:layout_alignParentStart="true"
            />

        <TextView
            android:text="Select your security question?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/reg_email"
            android:layout_alignParentStart="true"
            android:id="@+id/qw"
            android:textColor="@android:color/background_dark" />

        <AutoCompleteTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qw"
            android:layout_centerHorizontal="true"
            android:id="@+id/autoCompleteTextView"
            android:completionHint="Select from dropdown list" />

        <TextView
            android:text="Security Answer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/autoCompleteTextView"
            android:layout_alignParentStart="true"
            android:id="@+id/qqw"
            android:textColor="@android:color/background_dark" />
        <android.support.design.widget.TextInputLayout
            android:id="@+id/tttttttt"
            android:layout_height="wrap_content"
            android:layout_below="@+id/qqw"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            app:passwordToggleEnabled="true">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/security_answer"/>
        </android.support.design.widget.TextInputLayout>
        <Button
            android:text="PROCEED"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/proceed_button"
            android:textSize="12sp"
            android:layout_marginTop="68dp"
            android:background="@drawable/border_colour"
            android:textColor="#000000"
            android:paddingLeft="15dp"
            android:layout_below="@+id/tttttttt"
            android:layout_alignParentStart="true" />

        <TextView
            android:text="*only password can be altered later"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tttttttt"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="45dp"
            android:id="@+id/textView18"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="12sp" />


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>